{
  "name": "rocketmq-nodejs",
  "version": "1.0.5",
  "description": "Apache RocketMQ Client for Node.js",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "lib",
    "Release",
    "index.js",
    "index.d.ts"
  ],
  "os": [
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "binary": {
    "napi_versions": [
      9,
      10
    ]
  },
  "scripts": {
    "build": "cmake-js build",
    "build:coverage": "cmake-js rebuild --CDROCKETMQ_ENABLE_COVERAGE=ON --CDROCKETMQ_USE_STUB=ON",
    "test": "node --expose-gc --test --test-force-exit",
    "test:coverage": "npm run build:coverage && node --expose-gc --test --test-force-exit && gcovr -r . --filter src --exclude test --print-summary"
  },
  "dependencies": {
    "bindings": "^1.5.0"
  },
  "devDependencies": {
    "node-addon-api": "^8.5.0",
    "cmake-js": "^7.4.0"
  }
}
